<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kairat.quizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_quiz_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_quiz_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name=".ui.activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.result.ResultActivity" />
        <activity android:name=".ui.activities.quiz.QuizActivity" />
        <activity android:name=".ui.activities.main.MainActivity"/>
    </application>

</manifest>