<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/delete_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_delete_item"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/card_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/history_category"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/card_categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/card_category"
                    android:text="lol"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/correct_answers_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_category"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/correct_answers"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:id="@+id/correct_answers_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_category"
                    app:layout_constraintLeft_toRightOf="@id/correct_answers_text"
                    android:text="lol"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:id="@+id/card_difficulty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/correct_answers_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/difficulty"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:id="@+id/card_difficulty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/correct_answers_text"
                    app:layout_constraintLeft_toRightOf="@id/card_difficulty_text"
                    android:text="lol"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:id="@+id/created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_difficulty_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="12.00.2017"
                    android:layout_margin="10dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>