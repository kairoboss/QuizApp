<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="question"
            type="com.kairat.quizapp.data.models.Question" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quiz_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{question.question}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="131dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linear_multiple"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_question_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/first_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{question.correctAnswer}"
            style="@style/VariantStyleButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/second_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{question.incorrectAnswer.get(0).toString()}"
            style="@style/VariantStyleButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/third_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{question.incorrectAnswer.get(1).toString()}"
            style="@style/VariantStyleButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fourth_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{question.incorrectAnswer.get(2).toString()}"
            style="@style/VariantStyleButton" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_true_false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_question_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/variant_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            style="@style/VariantStyleButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/variant_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            style="@style/VariantStyleButton"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>